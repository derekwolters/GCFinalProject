                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                <body>
    <div class="jumbotron">
        <div class="container">
            <img src="~/Content/images/logo.jpg" />
            <!--<h1>Hungry Hungry Hipsters</h1>
            <p class="lead">Craving something? Tell us what it is and we will tell you what nurtients your body may be needing and even give you some recipies to satisfy that craving.</p>-->
        </div>
    </div>

    <div class="container">
        <h2> Craving something? </h2>
        @using (Html.BeginForm("Selection", "Nutrients"))
        {
            <select name="dietChoice">
                <option value="vegan">Vegan</option>
                <option value="gluten-free">Gluten-Free</option>
                <option value="peanut-free">Peanut Allergy</option>
                <option value="vegitarian">Vegitarian</option>
                <option value="tree-nut-free">Tree Nut Allergy</option>
                <option value="alcohol-free">Alcohol Free</option>
            </select>

            <div class="row">
                <div class="col-md-3">
                    <button type="submit" class="buttonsub" id="sweets" value="2" name="userChoice">Sweets</button>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="buttonsub" id="bread" value="3" name="userChoice">Bread</button>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="buttonsub" id="salty" value="10" name="userChoice">Salty Foods</button>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="buttonsub" id="fatty" value="4" name="userChoice">Fatty Foods</button>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="buttonsub" id="chocolate" value="1" name="userChoice">Chocolate</button>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="buttonsub" id="alcohol" value="6" name="userChoice">Alcohol</button>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="buttonsub" id="acidic" value="11" name="userChoice">Acidic Food</button>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="buttonsub" id="soda" value="9" name="userChoice">Soda</button>
                </div>
            </div>
        }
    </div>
</body>
